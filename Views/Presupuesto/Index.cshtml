@model IEnumerable<Sintronico.Models.Presupuesto>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdPresupuesto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdBicicleta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaEntrega)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Monto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdPresupuesto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bicicleta.IdBicicleta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaEntrega)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Monto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.ActionLink("Editar", "Editar", new { id = item.IdPresupuesto }) |
                @Html.ActionLink("Detalles", "Index","DetallePresupuesto", new { id = item.IdPresupuesto }) |
                @Html.ActionLink("Eliminar", "Eliminar", new { id = item.IdPresupuesto })
            </td>
        </tr>
}
    </tbody>
</table>
