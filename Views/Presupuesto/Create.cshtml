@model Sintronico.Models.Presupuesto

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Presupuesto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdBicicleta" class="control-label"></label>
                <select name="IdBicicleta" class="form-control">
                    @foreach (var item in (List<Bicicleta>)ViewBag.Bicicletas)
                    {
                        <option value="@item.IdBicicleta">@(item.Marca)</option>
                    }
                </select>
                <span asp-validation-for="IdBicicleta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdUsuario" class="control-label"></label>
                    <select name="IdUsuario" class="form-control">
                    @foreach (var item in (List<Usuario>)ViewBag.Usuarios)
                    {
                        <option value="@item.IdUsuario">@(item.Nombre +" "+ item.Apellido)</option>
                    }
                </select>
                <span asp-validation-for="IdUsuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaInicio" class="control-label"></label>
                <input asp-for="FechaInicio" class="form-control" />
                <span asp-validation-for="FechaInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaEntrega" class="control-label"></label>
                <input asp-for="FechaEntrega" class="form-control" />
                <span asp-validation-for="FechaEntrega" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Monto" class="control-label"></label>
                <input asp-for="Monto" class="form-control" />
                <span asp-validation-for="Monto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estado" class="control-label"></label>
                <select name="Estado" class="form-control">
                    <option value="Recibida" selected>Recibida</option>
                    <option value="En espera de aprobacion">En espera de aprobacion</option>
                    <option value="En cola">En cola</option>
                    <option value="En Reparacion">En Reparacion</option>
                    <option value="Para Entregar">Para Entregar</option>
                </select>
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
