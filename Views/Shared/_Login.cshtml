@model Sintronico.Models.LoginView

<hr />
<div class="login container text-center">
    <div class="imagenLogin container">
        <img src="" alt="" class="imagen">
    </div>
    <h4 class="text-center p-3 text-light">Iniciar Sesion</h4>
    <div class="d-flex text-light justify-content-center p-3">
        <form asp-controller="Usuario" asp-action="Login">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group p-2">
                <label asp-for="Usuario" class="control-label"></label>
                <input asp-for="Usuario" class="form-control" />
                <span asp-validation-for="Usuario" class="text-danger"></span>
            </div>
            <div class="form-group p-2 col-12">
                <label asp-for="Clave" class="control-label"></label>
                <input asp-for="Clave" class="form-control" />
                <span asp-validation-for="Clave" class="text-danger"></span>
            </div>
            <div>
                <a href="" class="olvidado">Has olvidado la contraseña?</a>
            </div>
            <div class="boton p-2">
                <input type="submit" value="Iniciar sesión" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<hr />


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}