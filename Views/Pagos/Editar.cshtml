@model Sintronico.Models.Pago

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Pagos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Editar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdPresupuesto" class="control-label"></label>
                <select name="IdPresupuesto" class="form-control">
                    @foreach (var item in (List<Presupuesto>) ViewBag.Presupuesto)
                    {
                        <option value="@item.IdPresupuesto"> @(item.IdPresupuesto) </option>
                    }
                </select>
                <span asp-validation-for="IdPresupuesto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Monto" class="control-label"></label>
                <input asp-for="Monto" class="form-control" />
                <span asp-validation-for="Monto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaEmision" class="control-label"></label>
                <input asp-for="FechaEmision" class="form-control" />
                <span asp-validation-for="FechaEmision" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
